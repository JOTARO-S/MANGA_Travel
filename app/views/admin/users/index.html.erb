<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2 class="">ユーザー一覧</h2>
        <table class='table table-hover'>
          <thead  style="background-color: #444">
                <tr class="text-light">
                  <th>ID</th>
                  <th>プロフィール画像</th>
                  <th>ユーザー名</th>
                  <th>メールアドレス</th>
                  <th>登録日時</th>
                  <th>ステータス</th>
                  <th></th>
                </tr>
              </thead>
          <tbody style="background-color: rgba(255,255,255,0.5)">
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= image_tag user.get_user_image, size: '50x50' %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.to_s(:datetime_jp) %></td>
                <td>
                  <% if user.is_deleted %>
                  退会済
                  <% elsif %>
                  有効
                  <% end %>
                </td>
                <td><%= link_to '詳細', admin_user_path(user), class: "btn btn-secondary" %></td>
              </tr>
            <% end %>
         </tbody>
        </table>
    </div>
  </div>
</div>