<div class="container">
    <div class="row mt-3">
            <table class='table table-hover mt-3'>
              <thead style="background-color: #444">
                <tr class="text-light">
                  <th>コメント</th>
                  <th>ユーザー名</th>
                  <th></th>
                </tr>
              </thead>
              <tbody style="background-color: rgba(255,255,255,0.5)">
                <% @comments.each do |comment| %>
                  <tr>
                    <td><%= comment.comment_content %></td>
                    <td><%= link_to comment.user.name, admin_user_path(comment.user.id) %></td>
                    <td><%= link_to "詳細", admin_post_path(comment.post.id), class: "btn btn-secondary" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            
        </div>
    </div>
</div>

