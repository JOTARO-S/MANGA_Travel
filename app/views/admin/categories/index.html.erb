<div class="container">
  <div class="row-md">
    <h2>所在地一覧</h2>
  </div>
  <div class="row-md">
    <%= form_with model: @category, url: admin_categories_path, local: true do |form| %>
      <div class="form-group row">
        <%= form.label :所在地名, class: 'col-md-3 offset-1 text-center lead' %>
        <%= form.text_field :name, class: 'col-md-4' %>
        <%= form.submit :新規登録, class: 'btn btn-secondary col-md-2 offset-1' %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead style="background-color:rgba(130,0,0,0.8);">
        <tr>
          <th class="text-white">所在地名</th>
          <th class="text-white">登録日時</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody style="background-color:rgba(255,255,255,0.5);">
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.created_at.to_s(:datetime_jp) %></td>
            <td><%= link_to "編集する", edit_admin_category_path(category), class: "btn btn-success" %></td>
            <td><%= link_to "削除する", admin_category_path(category), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>