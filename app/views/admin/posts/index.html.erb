<div class="container">
    <div class="row mt-3">
            <table class='table table-hover table-inverse mt-3'>
              <thead>
                <tr>
                  <th>タイトル</th>
                  <th>住所・施設名</th>
                  <th>タグ</th>
                  <th>所在地</th>
                  <th>ユーザー名</th>
                  <th>コメント数</th>
                  <th></th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.name %></td>
                    <td><%= post.place %></td>
                    <td>
                      <% post.tags.each do |tag| %>
                        <%= tag.tag_name %><%="(#{tag.posts.count})" %><br>
                      <% end %>
                    </td>
                    <td><%= post.get_category_name %></td>
                    <td><%= link_to post.user.name, admin_user_path(post.user.id) %></td>
                    <td><%= post.comments.count %></td>
                    <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-success" %></td>
                    <td>
                      <% if post.is_active %>
                      非公開
                      <% elsif %>
                      公開
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            
        </div>
    </div>
</div>

