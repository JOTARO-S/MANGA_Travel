            <% if posts.count == 0 %>
            <div class="row">
              <h3>投稿はありません。</h3>
            </div>
            <% end %>
            <% unless posts.count == 0 %>
            <table class='table table-hover table-inverse mt-3'>
              <thead>
                <tr>
                  <th>タイトル</th>
                  <th>住所・施設名</th>
                  <th>タグ</th>
                  <th>所在地</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% posts.each do |post| %>
                 <% if post.is_active == false %>
                  <tr>
                    <td><%= link_to post.name, admin_post_path(post) %></td>
                    <td><%= link_to post.place, admin_post_path(post) %></td>
                    <td>
                      <%="(#{post.tags.count})" %>
                    </td>
                    <td><%= link_to post.get_category_name, post_path(post) %></td>
                    <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-success" %></td>
                    <td><%= link_to "★", admin_post_path(post), class: "btn btn-success" %></td>
                  </tr>
                 <% end %>
                  <% if post.is_active == true %>
                  <tr>
                    <td><%= link_to post.name, admin_post_path(post) %></td>
                    <td><%= link_to post.place, admin_post_path(post) %></td>
                    <td>
                      <%="(#{post.tags.count})" %>
                    </td>
                    <td><%= link_to post.get_category_name, admin_post_path(post) %></td>
                    <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-success" %></td>
                    <td>公開停止中</td>
                  </tr>
                 <% end %>
                <% end %>
              </tbody>
            </table>
            <% end %>