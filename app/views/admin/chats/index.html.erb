<div class="container">
    <div class="row pt-3">
        <div class="col-md-12">
            <h2 class="">チャット一覧</h2>
             <table class='table table-hover'>
          <thead  style="background-color: #444">
                <tr class="text-light">
                  <th>タイトル</th>
                  <th>説明</th>
                  <th>ユーザー名</th>
                  <th>登録日時</th>
                  <th></th>
                </tr>
              </thead>
          <tbody style="background-color: rgba(255,255,255,0.5)">
            <% @chats.each do |chat| %>
              <tr>
                <td><%= chat.title.truncate(15) %></td>
                <td><%= chat.explanation.truncate(15) %></td>
                <td><%= link_to chat.user.name.truncate(15), user_path(chat.user.id) %></td>
                <td><%= chat.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= link_to "詳細", admin_chat_path(chat), 'data-turbolinks': false, class: "btn btn-secondary" %></td>
              </tr>
            <% end %>
         </tbody>
        </table>
        </div>
    </div>
    <div class="row">
        <%= paginate @chats %>
    </div>
</div>


