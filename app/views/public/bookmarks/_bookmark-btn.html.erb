    <% if post.bookmarked_by?(current_user) %>
    <div class="row">
        <%= link_to post_bookmarks_path(post.id),method: :delete, class: "text-danger", remote: true do %>
        <button type="button" class="btn btn-secondary">保存済み</button>
        <% end %>
    <% else %>
        <%= link_to post_bookmarks_path(post.id),method: :post, class: "text-primary", remote: true do %>
        <button type="button" class="btn btn-secondary">保存</button>
        <% end %>
    <% end %>
    </div>