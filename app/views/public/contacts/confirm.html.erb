<div class="container">
  <h4 class="text-light text-center p-3"  style="background-color: #444;">お問い合わせ内容</h4>
<table style="width: 100%; margin-left:auto; margin-right:auto;">
  <tbody class="" style="background-color: rgba(255,255,255,1);">
    <tr class="mt-1">
      <td class="text-center" style="width: 30%;">お名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">電話番号</td>
      <td><%= @contact.phone_number %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">メールアドレス</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">件名</td>
      <td><%= @contact.subject %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">メッセージ</td>
      <td style="white-space: pre-wrap;"><%= @contact.message %></td>
    </tr>
  </tbody>
</table>


  <div class="row mt-3">
    <div style="margin-left:auto; margin-right:auto;">  
  
      <%= form_for(@contact) do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <div class="mt-3"><%= f.submit '送信', "data-turbolinks": false, class: "btn btn-block btn-secondary" %></div>
      <% end %>
      <%= form_for @contact, url: back_path do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <div class="mt-3"><%= f.submit '入力画面に戻る', "data-turbolinks": false, class: "btn btn-block btn-outline-secondary" %></div>
      <% end %>

    </div>
  </div>
</div>