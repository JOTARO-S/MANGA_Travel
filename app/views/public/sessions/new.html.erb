<div class="container p-3">
  <div class="row">
    <div class="col-md-6 mt-1 mx-auto">
      
      <div class="p-2" style="background-color: #444;">
        <h5 class="text-light" style="">ログイン</h3>
      </div>
      
      <div class="p-2" style="background-color: #FFF;">
      <%= form_with model: @user, url: user_session_path do |f| %>
        
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", autocorrect: "off", autocapitalize: "off", size: " 50 x 30 " %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", autocorrect: "off", autocapitalize: "off", size: " 50 x 30 " %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "パスワードを保存する", class: "mt-2" %>
      </div>
      
      <% end %>
      
      
      <div class="actions">
        <%= f.submit "ログインする", class: 'btn btn-block btn-success p-2' %>
      </div>
      <% end %>
      
      <div class="text-right mt-3">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %><br />
      <% end %>
      </div>
      
      </div>
      
      <div class="p-2 mt-3" style="background-color: #444;">
        <h5 class="text-light" style="">まだ会員登録をしていない方</h3>
      </div>
      
      <div class="p-2" style="background-color: #FFF;">
        <p class="text-center" style="font-size: 15px;">まだ会員登録がお済みでいない方はこちらより登録可能です。</p>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "同意して新規登録", new_registration_path(resource_name), class: 'btn btn-block btn-secondary p-2' %><br />
      <% end %>
      </div>
    
      
    
    </div>
  </div>
</div>

