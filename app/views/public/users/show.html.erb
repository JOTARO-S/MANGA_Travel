<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
        <table class='table'>
          <tr><%= image_tag @user.get_user_image, size:'100x100' %></tr>
          <tr>
	          <th>ユーザー名</th>
	          <th><%= @user.name %></th>
          </tr>
          <tr>
	          <th>プロフィール</th>
	          <th><%= @user.explanation %></th>
          </tr>
        </table>
　
　    <% if @user == current_user %>
        <div class='row'>
          <%= link_to "編集",edit_user_path(@user), class: "btn btn-outline-secondary btn-block"%>
        </div>
      <% end %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <%= link_to "ブックマーク一覧",bookmarks_path(@user), class: "btn btn-outline-secondary"%>
      <%= link_to "下書き一覧",draft_path(@user), class: "btn btn-outline-secondary"%>
      <%= link_to "★",root_path, class: "btn btn-outline-secondary"%>
      <%= render 'public/posts/index', posts: @posts %>
    </div>
</div>
