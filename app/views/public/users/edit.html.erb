<div class='container'>
  <div class='row'>
    <%= render 'layouts/errors', obj: @user %>
  </div>
  </div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
        <div class="form-group">
        <%= f.label :email %>
        <%= @user.email %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :user_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :explanation %>
        <%= f.text_area :explanation, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      
      <div class="form-group row">
        <%= link_to "退会する", unsubscribe_path, class: 'mt-3 btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>