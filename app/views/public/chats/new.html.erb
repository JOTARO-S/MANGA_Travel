<div class="container p-3" style="background-color:rgba(77,77,77,0.3);">
 <h2>新規作成</h2>
  <div class="row p-2">
    <%= render 'layouts/errors', obj: @chat %>
  </div>
  <div class="row">
        <div class="col-md-12">
          <%= form_with model: @chat, url:chats_path,  local: true do |form| %>
            <div class="form-group row">
              <%= form.text_field :title, placeholder: "チャットのタイトル（必須）", class: 'col-md-7 mr-4' %>
            </div>
            <div class="form-group row">
              <%= form.text_field :explanation, placeholder: "説明を入力してください", class: 'col-12' %>
            </div>
        </div>
            <div style="background-color:#444;">
                <h3 class="text-light", style="text-align: center;">利用規約</h3>
                <div class="box">
                  <%= render 'public/homes/terms' %>
                </div>
            </div>
            <div class="form-group row centerpost mt-3">
              <%= form.submit :利用規約に同意して投稿する, class: 'btn btn-secondary mr-1' %>
              <%= link_to "キャンセル",chats_path, "data-turbolinks": false, class: "btn btn-outline-secondary"%>
            </div>
          <% end %>
    </div>
</div>
