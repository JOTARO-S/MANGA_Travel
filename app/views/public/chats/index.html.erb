<div class="container">
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="row mt-3">
                    <%= link_to "新規投稿", new_chat_path, 'data-turbolinks': false, class: "btn btn-success col-2 offset-7" %>
                </div>
            </div>
            <table class='table table-hover table-inverse mt-3'>
              <thead>
                <tr>
                  <th>タイトル</th>
                  <th>ユーザー名</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @chats.each do |chat| %>
                 <% if chat.is_active == false %>
                 <% if chat.draft_status == false %>
                  <tr>
                    <td><%= chat.title.truncate(15) %></td>
                    <td><%= link_to chat.user.name.truncate(15), user_path(chat.user.id) %></td>
                    <td><div class="bookmark_btn_<%= chat.id %> col-md-3">
                     <%= render "public/bookmarks/bookmark-btn", chat: chat %></div>
                    </td>
                  </tr>
                 <% end %>
                 <% end %>  
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>


