<div class="container p-3" style="background-color:rgba(77,77,77,0.3);">
 <h2>新規投稿</h2>
  <div class="row p-2">
    <%= render 'layouts/errors', obj: @post %>
  </div>
  <div class="row">
        <div class="col-md-8">
          <%= form_with model: @post, url:posts_path,  local: true do |form| %>
            <div class="form-group row">
              <%= form.text_field :name, placeholder: "作品のタイトル（必須）", class: 'col-md-7 mr-4' %>
              <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: "所在地を選択（必須）", class: 'col-md-4' %>
            </div>
            <div class="form-group row">
              <%= form.text_field :place, placeholder: "場所名（観光地や場所の住所を入力してください）（必須）", class: 'col-12' %>
            </div>
            <div class="form-group row">
              <%= form.text_area :explanation, placeholder: "本文", class: 'col-12', rows: 15 %>
            </div>
            <div class="form-group row">
              <%= form.text_field :tag_name, value: @tag_list, placeholder: "タグ（複数つけたい場合は半角スペースで区切ってください。）", class: 'col-10' %>
            </div>
            <div class="form-group row">
              <%= form.file_field :post_image, multiple: true, class: 'col-10', accept: "image/*" %>
            </div>
            <div class="row">
              <p class="mt-1 ml-2">画像は複数選択可能です。自分で撮影した写真を利用するようにしてください。</p>
            </div>
        </div>
        <div class="col-md-4">
            <div style="background-color:#444;">
                <h3 class="text-light", style="text-align: center;">利用規約</h3>
                <div class="box">
                  <%= render 'public/homes/terms' %>
                </div>
            </div>
            <div class="form-group row centerpost mt-3">
              <div class="col-5" style="padding-right:20px;">
              <%= form.radio_button :draft_status, false, checked: true %>
              <%= form.label :draft_status, "公開", {value: :false, style: "display: inline-block;"} %>
              </div>
              <div class="col-6" style="padding-right:20px;">
              <%= form.radio_button :draft_status, :true %>
              <%= form.label :draft_status, "下書き保存", {value: :true, style: "display: inline-block;"} %>
              </div>  
            </div>
            <div class="form-group row centerpost">
              <%= form.submit :利用規約に同意して投稿する, class: 'btn btn-secondary mr-1' %>
              <%= link_to "キャンセル",posts_path, "data-turbolinks": false, class: "btn btn-outline-secondary"%>
            </div>
          <% end %>
              
        </div>
    </div>
</div>
