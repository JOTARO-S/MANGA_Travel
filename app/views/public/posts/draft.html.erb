<div class="container">
    <div class="row mt-3">
      <h2>下書き一覧</h2>
        <div class="col-md-12">
          <% if @posts.count == 0 %>
            <h3>下書きはありません。</h3>
          <% end %>
            <% unless@posts.count == 0 %>
            <table class='table table-hover table-inverse mt-3'>
              <thead>
                <tr>
                  <th>タイトル</th>
                  <th>住所・施設名</th>
                  <th>所在地</th>
                  <th>ユーザー名</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @posts.each do |post| %>
                 <% if post.user == current_user %>
                  <% if post.draft_status == true %>
                  <tr>
                    <td><%= post.name.truncate(15) %></td>
                    <td><%= post.place.truncate(15) %></td>
                    <td><%= post.get_category_name.truncate(15) %></td>
                    <td><%= link_to post.user.name.truncate(15), user_path(post.user.id) %></td>
                    <td><%= link_to "詳細", post_path(post), class: "btn btn-success" %></td>
                  </tr>
                  <% end %>
                 <% end %>
                <% end %>
              </tbody>
            </table>
            <% end %>
            
            
        </div>
    </div>
</div>