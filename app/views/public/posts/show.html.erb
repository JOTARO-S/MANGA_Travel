<div class="container p-3" style="background-color:rgba(77,77,77,0.3);">
 <h2>投稿詳細</h2>
  <div class="row p-2">
        <div class="col-md-6">
         <% if @post.post_image.attached? %>
          <% @post.post_image.each do |image| %>
            <%= image_tag @post.post_image.variant(resize: "500x500") %>
          <% end %>
         <% end %> 
         <% unless @post.post_image.attached? %>
         <%= image_tag "no_image.jpg" %>
         <% end %>
        </div>
        <div class="col-md-6">
         <table class="table table-bordered col-6 offset-1 ">
          <tbody>
           <tr>
            <td class="text-white" style="background-color:rgba(130,0,0,0.8);">Title</td>
            <td style="background-color:rgba(255,255,255,0.5);"><%= @post.name %></td>
           </tr>
          </tbody>
         </table>

        </div>
  </div>
  <div class="row">
     
  </div>
    
</div>

