<div class="row ml-4">
 <div class="search_from mr-3">
  <%= form_with(url: search_path, local: true, method: :get) do |f| %>
  <%= f.select :range, options_for_select([["投稿検索"], ["ユーザー検索"]]) %>
   <%= f.text_field :word %>
   <%= f.collection_select(:prefectures, Category.all, :id, :name, include_blank: true) %>
   <%= f.collection_select(:tag_id, Tag.all, :id, :tag_name, include_blank: true) %>
   <%= f.submit "検索" %>
  <% end %>
 </div>
 </div>