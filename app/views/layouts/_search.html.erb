<div class="row ml-4">
 <div class="search_from mr-3">
  <%= form_with(url: search_path, local: true, method: :get) do |f| %>
  <%= f.select :range, options_for_select([["投稿検索"], ["ユーザー検索"]]) %>
   虫眼鏡 <%= f.text_field :word , size: 50, placeholder: "タイトルを入力" %>
   <%= f.collection_select(:prefectures, Category.all, :id, :name, include_blank: "所在地を選択", size: 50) %>
   <%= f.collection_select(:tag_id, Tag.all, :id, :tag_name, include_blank: "タグを選択", size: 50 ) %>
   <%= f.submit "検索" %>
  <% end %>
 </div>
 </div>