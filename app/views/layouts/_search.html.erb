<div class="row ml-1 mt-4">
 <div class="search_from mr-3">
  
  <%= form_with(url: search_path, local: true, method: :get) do |f| %>
   <% if request.path == "/users" %>
    <%= f.select :range, options_for_select([["ユーザー検索"],["投稿検索"]]) %>
   <% else %>
    <%= f.select :range, options_for_select([["投稿検索"], ["ユーザー検索"]]) %>
   <% end %>
    <%= f.text_field :word , size: 40, placeholder: "タイトル（ユーザー名）を入力" %>
    <%= f.collection_select(:prefectures, Category.all, :id, :name, include_blank: "所在地を選択", size: 40) %>
    <%= f.collection_select(:tag_id, Tag.all, :id, :tag_name, include_blank: "タグを選択", size: 40 ) %>
    <%= f.button type: "submit", class: "btn btn-secondary mb-1", style: "height: 40px; width: 80px;" do %>
     <i class="fas fa-search"></i>
    <% end %>
  <% end %>
 </div>
</div>